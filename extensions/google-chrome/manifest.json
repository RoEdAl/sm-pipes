{
    "description": "Send to SuperMemo add-on",
    "manifest_version": 2,
    "name": "Send to SuperMemo",
    "version": "1.0",
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "icons": {
        "16": "icons/sm-16.png",
        "32": "icons/sm-32.png",
        "48": "icons/sm-48.png",
        "64": "icons/sm-64.png"
    },

    "background": {
        "scripts": [ "background.js" ]
    },

    "content_scripts": [
        {
            "js": [ "content-script.js" ],
            "matches": [ "*://*/*" ],
            "match_about_blank": false,
            "all_frames": false,
            "run_at": "document_idle"
        }
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/disabled/sm-16.png",
            "32": "icons/disabled/sm-32.png",
            "48": "icons/disabled/sm-48.png",
            "64": "icons/disabled/sm-64.png"
        },
        "default_title": "Connecting to SuperMemoâ€¦"
    },

    "permissions": [
        "nativeMessaging",
        "activeTab",
        "contextMenus",
        "*://*/*"
    ]
}
