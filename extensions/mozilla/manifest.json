{
  "description": "Send to SuperMemo add-on",
  "manifest_version": 2,
  "name": "Send to SuperMemo",
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "applications": {
    "gecko": {
      "id": "smpipes@supermemory.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.svg"
  },
  
  "permissions": ["nativeMessaging", "activeTab"]
}
