{
	"name": "Send to SuperMemo",
	"version": "1.0",
	// "default_locale": "en",
	"description": "",
	"permissions": [
		"tabs",
		"activeTab",
		"nativeMessaging"
	],
	"browser_action": {
		"default_icon": {
			"16": "icons/sm-16.png",
			"32": "icons/sm-32.png",
			"48": "icons/sm-48.png",
			"64": "icons/sm-64.png"
